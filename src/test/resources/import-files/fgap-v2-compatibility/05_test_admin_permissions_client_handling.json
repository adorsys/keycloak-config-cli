{
  "realm": "fgap-v2-admin-permissions-test",
  "adminPermissionsEnabled": true,
  "enabled": true,
  "roles": {
    "realm": [
      {
        "name": "test-manager-role",
        "description": "Test manager role for FGAP V2"
      }
    ]
  },
  "clients": [
    {
      "clientId": "test-app-client",
      "description": "Test Application Client",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "standardFlowEnabled": true,
      "serviceAccountsEnabled": true,
      "publicClient": false,
      "protocol": "openid-connect",
      "fullScopeAllowed": true,
      "authorizationServicesEnabled": false
    },
    {
      "clientId": "admin-permissions",
      "enabled": true,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": true,
      "authorizationSettings": {
        "allowRemoteResourceManagement": true,
        "policyEnforcementMode": "ENFORCING",
        "resources": [
          {
            "name": "client.resource.$test-app-client",
            "type": "Client",
            "ownerManagedAccess": false,
            "scopes": [
              {"name": "view"},
              {"name": "manage"}
            ]
          }
        ],
        "policies": [
          {
            "name": "test-manager-policy",
            "description": "Test manager policy",
            "type": "role",
            "logic": "POSITIVE",
            "decisionStrategy": "UNANIMOUS",
            "config": {
              "roles": "[{\"id\":\"test-manager-role\",\"required\":true}]"
            }
          }
        ]
      }
    }
  ]
}